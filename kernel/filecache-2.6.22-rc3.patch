+struct session {
+	int		private_session;
+	struct file	*query_file;
+	pgoff_t		next_offset;
+	struct {
+		unsigned long cursor;
+		unsigned long origin;
+		unsigned long size;
+		struct inode **inodes;
+	} ivec;
+	struct {
